<div id="{{uniqid}}-course-format" class="{{format}}-assessments-oneperpage">
    {{#backtoallsections}}
        {{>format_compass/local/content/backtoallsections}}
    {{/backtoallsections}}
    <h2 class="accesshide">{{{title}}}</h2>
    {{{completionhelp}}}
    {{^singlesection}}
        {{#textareaabove}}
            <div class="compass-assessments-textabove">{{{textareaabove}}}</div>
        {{/textareaabove}}
        {{#addsectionbefore}}
            {{#showaddsection}}
                <div class="addsectionbefore">
                    {{$ format_compass/local/content/addsection}}
                        {{> format_compass/local/content/addsection}}
                    {{/ format_compass/local/content/addsection}}
                </div>
            {{/showaddsection}}
        {{/addsectionbefore}}
    {{/singlesection}}
    <ul class="{{format}}" data-for="course_sectionlist">
        {{#initialsection}}
            {{$ core_courseformat/local/content/section }}
                {{> core_courseformat/local/content/section }}
            {{/ core_courseformat/local/content/section }}
        {{/initialsection}}
        {{#sections}}
             {{$ format_compass/local/assessments/oneperpage/content/section }}
                {{> format_compass/local/assessments/oneperpage/content/section }}
            {{/ format_compass/local/assessments/oneperpage/content/section }}
        {{/sections}}
    </ul>
    {{#hasnavigation}}
    <div class="single-section">
        {{#sectionnavigation}}
            {{$ core_courseformat/local/content/sectionnavigation }}
                {{> core_courseformat/local/content/sectionnavigation }}
            {{/ core_courseformat/local/content/sectionnavigation }}
        {{/sectionnavigation}}
        <ul class="{{format}}">
        {{#singlesection}}
            {{$ format_compass/local/assessments/oneperpage/content/section }}
                {{> format_compass/local/assessments/oneperpage/content/section }}
            {{/ format_compass/local/assessments/oneperpage/content/section }}
        {{/singlesection}}
        </ul>
        {{#sectionselector}}
            {{$ core_courseformat/local/content/sectionselector }}
                {{> core_courseformat/local/content/sectionselector }}
            {{/ core_courseformat/local/content/sectionselector }}
        {{/sectionselector}}
    </div>
    {{/hasnavigation}}
    {{^singlesection}}
        {{#textareabelow}}
            <div class="compass-assessments-textbelow">{{{textareabelow}}}</div>
        {{/textareabelow}}
    {{/singlesection}}
</div>
{{#js}}
require(['format_compass/local/content'], function(component) {
    component.init('{{uniqid}}-course-format', {}, {{sectionreturn}});
});
{{/js}}
