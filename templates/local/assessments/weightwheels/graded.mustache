{{!
    @template format_compass/templates/local/assessments/weightwheels/graded.mustache

    Displays graded weightwheel
}}

<div class="compass-weightwheel-container">
    <div class="compass-weightwheel-countsfor">{{#str}}assessments_counts_for, format_compass{{/str}}</div>
    <div class="compass-weightwheel-wrapper">
        <canvas id="weightwheel{{id}}"></canvas>
        <div class="compass-weightwheel-value">
            <span class="compass-weightwheel-percent{{#editing}}-edit{{/editing}}">{{chartpercent}}</span>
            <span class="compass-weightwheel-percent-breakdown{{#editing}}-edit{{/editing}}">{{chartpercentbreakdown}}</span>
            {{#editing}}
                <span class="compass-weightwheel-edit">
                    <a href="#" data-action="editGradeWeight" data-id="{{id}}" class="quickediticon visibleifjs">
                        <i class="icon fa fa-pencil fa-fw " title="Edit section name" role="img" aria-label="Edit section name"></i>
                    </a>
                </span>
            {{/editing}}
        </div>
    </div>
</div>