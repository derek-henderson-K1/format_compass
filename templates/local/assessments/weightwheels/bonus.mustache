{{!
    @template format_compass/templates/local/assessments/weightwheels/bonus.mustache

    Displays bonus weightwheel
}}

<div class="compass-bonus-container">
    <div class="compass-bonus-upto">{{#str}}assessments_bonus_upto, format_compass{{/str}}</div>
    <div class="compass-bonus-wrapper">
        <div class="compass-bonus-percent{{#editing}}-edit{{/editing}}">
            <span>+</span>{{bonuspercent}}
        </div>
        {{#editing}}
            <div class="compass-bonus-edit">
                <a href="#" data-action="editGradeWeight" data-id="{{id}}" class="quickediticon visibleifjs">
                    <i class="icon fa fa-pencil fa-fw " title="Edit section name" role="img" aria-label="Edit section name"></i>
                </a>
            </div>
        {{/editing}}
    </div>
</div>