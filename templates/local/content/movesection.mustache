{{!
    @template format_compass/templates/local/content/movesection

    Displays the course index.

    Example context (json):
    {
        "sectionid": 23,
        "sectiontitle": "Section title",
        "sections": [
            {
                "title": "Course Home",
                "id": 42,
                "number": 1,
                "sectionurl": "#",
                "sectionType": "home",
                "indexcollapsed": 0
            },
            {
                "title": "General",
                "id": 42,
                "number": 1,
                "sectionurl": "#",
                "indexcollapsed": 0
            },
            {
                "title": "City of God or Cidade de Deus",
                "id": "43",
                "number": "2",
                "sectionurl": "#",
                "indexcollapsed": 1
            },
            {
                "title": "Assessments",
                "id": 42,
                "number": 1,
                "sectionurl": "#",
                "sectionType": "assessments",
                "indexcollapsed": 0
            }
        ]
    }
}}

<p data-for="sectionname">{{#str}} movefull, moodle, {{sectiontitle}} {{/str}}:</p>
<nav class="collapse-list" id="destination-selector" role="tree">

    {{#coursehome}}
        <div class="compass-movesection-title">
            {{> format_compass/local/content/movesection_item }}
        </div>
    {{/coursehome}}

    <div class="compass-movesection-title"><a href="#" class="disabled" aria-disabled="true">{{ lessonsLabel }}</a></div>
    {{#sections}}
        {{> format_compass/local/content/movesection_item }}
    {{/sections}}

    {{#hasassessments}}
        <div class="compass-movesection-title"><a data-id="assessments_header" data-type="assessment" href="#">{{ assessmentsLabel }}</a></div>

        {{#assessments}}
            {{> format_compass/local/content/movesection_item }}
        {{/assessments}}

    {{/hasassessments}}

</nav>
