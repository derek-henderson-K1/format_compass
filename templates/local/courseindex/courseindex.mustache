<div id="course-index" class="courseindex {{#editmode}} editing {{/editmode}}" role="tree">
    <div id="courseindex-home-container">
        {{#coursehome}}
            {{> format_compass/local/courseindex/sectionzero }}
        {{/coursehome}}
    </div>
    <div class="compass-courseindex-label-lesson">{{lessonsLabel}}</div>
    <div id="courseindex-lessons-container">
    {{#sections}}
        {{> format_compass/local/courseindex/section }}
    {{/sections}}
    </div>
    {{#hasassessments}}
        <div id="assessments-section"
            data-for="section"
        >
            <div
                class="compass-courseindex-label-assessment"
                id="assessments_header"
                data-for="section_item"
                data-type="assessmentscutoff"
            >
                {{assessmentsLabel}}
            </div>
        <div>
        <div id="courseindex-assessments-container">
            {{#assessments}}
                {{> format_compass/local/courseindex/section }}
            {{/assessments}}
        </div>
    {{/hasassessments}}
</div>
{{#js}}
    require(['format_compass/local/courseindex/courseindex'], function(component) {
        component.init('course-index');
    });
    {{#hasassessments}}
        require(['format_compass/local/courseindex/section'], function(component) {
            component.init('assessments-section');
        });
    {{/hasassessments}}
{{/js}}
